<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/iv_person_photo"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/tv_person_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/iv_person_photo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_person_photo"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="30dp"
        tools:text="@tools:sample/lorem"/>
    <TextView
        android:id="@+id/tv_person_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_person_name"
        app:layout_constraintStart_toStartOf="@+id/tv_person_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_person_name"
        android:textSize="16dp"
        tools:text="@tools:sample/lorem"/>
    <TextView
        android:id="@+id/tv_person_quote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tv_person_name"
        app:layout_constraintEnd_toEndOf="@+id/tv_person_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_person_year"
        android:layout_marginLeft="0dp"
        android:textSize="16dp"
        tools:text="@tools:sample/lorem"/>
</androidx.constraintlayout.widget.ConstraintLayout>